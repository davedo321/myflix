%section.genre
  %header.clearfix
    %h1= @category.name
    .genre_sorting
      Sort by:
      %select(name="#{@category.name}")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @category.videos.each do |cat|
      .video.col-md-2
        = link_to cat, nil do
          %img(src="#{cat.small_img_url}")
